<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(drill) do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Edit <%= drill.name.titleize %></h4>
    </div>
    <div class="modal-body" >
      <div class="container" >
        <div class="row">
          <div class="col-lg-8">
            
              <% if drill.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(drill.errors.count, "error") %> prohibited this drill from being saved:</h2>

                  <ul>
                  <% drill.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <fieldset>
                <div class="form-group">
                  <%= f.label :name, class:"col-lg-2 control-label" %>
                  <div class="col-lg-6">
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                </div>
                <div style="clear:both"></div>
                <br>
                <div class="form-group">
                  <%= f.label :notes, class:"col-lg-2 control-label" %>
                  <div class="col-lg-6">
                    <%= f.text_area :notes, class: "form-control" %>
                  </div>
                </div>
                <div style="clear:both"></div>
                <br>
                <div class="form-group">
                  <%= f.label :sport, class:"col-lg-2 control-label" %>
                  <div class="col-lg-6">
                    <%= f.text_field :sport, class: "form-control" %>
                  </div>
                </div>
                <div style="clear:both"></div>
              </fieldset>
            <%= f.hidden_field :user_id, value: @user.id %>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
        <%= f.submit class:"btn btn-sm btn-success" %>
    <% end %>
    </div>
  </div>
</div>
  
