<p id="notice"><%= notice %></p>

<h1>My Drills</h1>
<div class="cotainer">
  <div class="row">
    <div class="col-lg-2">
      <div class="list-group">
        <a href="#" class="list-group-item active">Search My Drills</a>
        <a href="#" class="list-group-item">New Drill</a>
        <a href="#" class="list-group-item">Search by Sport</a>
        <a href="#" class="list-group-item">Search All Drills</a>
      </div>
    </div>
    <div class="col-lg-6 col-lg-offset-1">
      
      <% @drills.each do |drill| %>
        <%=render partial: 'drill_card', locals:{drill: drill}%>
      <% end %>
      
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <%= will_paginate @drills %>
    </div>
  </div>
</div>

<div class="modal" id="drill_modal">
  
</div>
<div id="drill_modal_2" >
  
</div>
<script>
  $('.modal').on('hidden.bs.modal', function (e) {
      if($('.modal').hasClass('in')) {
      $('body').addClass('modal-open');
      }    
  });
</script>
