<p id="notice"><%= notice %></p>

<h2><%=@practice.name.titleize%> on <%=@practice.date.strftime('%D')%></h2>
<h4>Practice Length: <%=@practice.length%></h4>
<h4>Time Remaining: <%=time_remaining(@practice)%></h4>
<h3>Drills</h3>

<div class="row">
  <div class="col-md-6 sortable">
    <% @slots.each do |slot| %>
    
      <div class="panel panel-default" data-id="<%= slot.id %>" >
        <div class="panel-heading">
          <h3 class="panel-title"><%= current_user.drills.find(slot.drill_id).name %></h3>
        </div>
        <div class="panel-body">
          <div class="col-md-6"><h6><%= slot.length %> minutes</h6></div>
          <div class="col-md-6">
          <%= link_to 'Show', practice_slot_path(@practice, slot) %><br>
          <%= link_to 'Edit', edit_practice_slot_path(@practice, slot) %><br>
          <%= link_to 'Destroy', practice_slot_path(@practice, slot), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<% if time_remaining(@practice) > 0 %>
  <%= link_to 'New Slot', new_practice_slot_path(@practice) %>
<% end %>
