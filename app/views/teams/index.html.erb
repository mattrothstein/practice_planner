<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Sport</th>
      <th>Age</th>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.sport %></td>
        <td><%= team.age %></td>
        <td><%= team.name %></td>
        <td><%= team.user.username %></td>
        <td><%= link_to 'Show', user_team_path(@user.id, team) %></td>
        <td><%= link_to 'Edit', edit_user_team_path(@user.id, team) %></td>
        <td><%= link_to 'Destroy', user_team_path(@user.id, team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

